{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Bat Recording Data Schema",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "location", "image_filename", "data_filename", "timestamp"],
    "properties": {
      "id": { "type": "string" },

      "location": {
        "type": "object",
        "required": ["latitude", "longitude"],
        "properties": {
          "latitude": { "type": "number" },
          "longitude": { "type": "number" }
        }
      },

      "image_filename": { "type": "string" },
      "data_filename": { "type": "string" },
      "description": { "type": "string" },
      "timestamp": { "type": "integer" },

      "signal": {
        "type": "object",
        "properties": {
          "amplitude": { "type": "number" },
          "freq_peak": { "type": "number" },
          "snr_db": { "type": "number" },
          "signal_valid": { "type": "boolean" }
        },
        "required": ["amplitude", "freq_peak"]
      },

      "suggested_species": { "type": ["string", "null"] },
      "verified_species": { "type": "string" },
      "species_verified": { "type": "boolean" }
    }
  }
}
